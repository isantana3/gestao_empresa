<%- include("head.ejs"); %>
    <body>
        <div class="table-responsive-sm">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                    <th>Matricula</th>
                    <th>Nome</th>
                    <th>Endereco</th>
                    <th>Data Nascimento</th>
                    <th class="d-print-none">
                        <a class="btn btn-sm btn-success" href="/inserir">Novo registro</a>
                    </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const item of dados) { %>
                        <tr>
                            <td><%= item.matricula %></td>
                            <td><%= item.nome %></td>
                            <td><%= item.endereco %></td>
                            <td><%= item.datanascimento %></td>
                            <td class="d-print-none">
                                <a class="btn btn-sm btn-info" href="/editar/<%= item.matricula %>">Editar</a>
                                <a class="btn btn-sm btn-danger" href="/delete/<%= item.matricula %>">Deletar</a>
                            </td>
                        </tr>
                    <%} %>
                </tbody>
            </table>
        </div>
    </body>
</html>